<% if @notifications %>
  <% @notifications.each do |n| %>
    <% if @friend_requests %>
      <h4>Friend Requests</h4>
      <% @friend_requests.each do |r| %>
        <div>
          <% requester = User.find(r.friend_id) %>
          <%= requester.profile.name %>

           <%= link_to "Accept Request", user_friendships_path(current_user, type: :accept_request)  %>

          <%= link_to "Deny Request", user_friendship_path(current_user, @friendships.select { |f| f.user_id == requester.id }, type: :deny_request), data: { turbo_method: :delete } %>
        </div>
      <% end %>
      <%# elsif (whatever other notifications)  %>
    <% end %>
  <% end %>
<% else %>
  <h3>Nothing to see here. Check back later.</h3>
<% end %>