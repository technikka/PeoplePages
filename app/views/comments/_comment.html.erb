<ul>
  <% if comment %>
    <div id="<%= "comment_#{comment.id}" %>">
      <li>
        <%= comment.body %>
        <%= link_to comment.user.profile.name, user_path(comment.user) data: { turbo_frame: "_top" } %>
      </li>
      <% if comment.user == current_user %>
        <%= link_to "delete", comment_path(comment.id), data: { turbo_method: :delete }  %>
      <% end %>
    </div>
  <% end %>
</ul>
