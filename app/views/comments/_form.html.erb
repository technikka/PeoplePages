<div class="comment">
  <%= form_with model: Comment,
                  data: { controller: 'input', action: 'turbo:submit-end->input#clear' } do |form| %>
    <%= form.text_area :body, size: '60X10', placeholder: 'Leave a comment', class: "text-sm align-middle p-2 max-w-full" %>
    <%= form.hidden_field :post_id, value: post.id %>
    <%= form.submit 'Add', class: "border-solid border-2 border-stone-200 p1 ml-2 bg-stone-200 hover:bg-amber-300 hover:cursor-pointer rounded-sm" %>
  <% end %>
</div>