<% post.comments.includes(:user).last(3).each do |comment| %>
  <ul>
    <% if comment %>
      <li>
        <%= comment.body %>
        <%= link_to comment.user.profile.name, user_path(comment.user), data: { turbo_frame: "_top" } %>
        <li>
          <%= link_to "Like", likes_path(like_comment: comment), data: { turbo_method: :post } %>
        </li>
      </li>
    <% end %>
  </ul>
<% end %>
