
<% @last_three = [post.comments[-3], post.comments[-2],  post.comments[-1]] %>
<%= turbo_frame_tag 'preview_comments' do %>
  <% @last_three.each do |comment| %>
    <ul>
      <% if comment %>
        <li>
          <%= comment.body %>
          <%= comment.user.profile.name %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% end %>
