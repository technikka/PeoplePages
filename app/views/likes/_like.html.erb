<%= turbo_frame_tag "like_#{resource.id}", class: "flex items-center " do %>
  <% likes = resource.likes.count %>
  <% if likes > 0 %>
    <div class="inline-block h-5 text-neutral-500 text-sm">
      <%= link_to likes, likes_path(resource: {type: resource.class, id: resource.id}), class: "underline decoration-sky-800 text-sky-800", data: { turbo_frame: "_top" } %> 
      <%= 'person' if likes == 1 %>  
      <%= 'people' if likes > 1 %>
      like<%= 's' if likes == 1 %> this.&nbsp;&nbsp;
    </div>
  <% else %>
    <div class="inline-block h-5 text-neutral-500 text-sm">Be the first to like this!&nbsp;&nbsp;</div>
  <% end %>
  <div class="inline-block">
    <%= link_to image_tag("icons/like_outline.png", class: "h-5 w-5"), likes_path(resource: {type: resource.class, id: resource.id }), data: { turbo_method: :post }, title: 'Like', class: "invert brightness-50 hover:brightness-100 " %>
  </div>
<% end %>