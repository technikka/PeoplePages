<%= turbo_frame_tag "like_#{resource.id}" do %>
  <% likes = resource.likes.count %>

  <% if likes > 0 %>
    <div class="inline-block">
      <%= link_to likes, likes_path(resource: {type: resource.class, id: resource.id}), class: "underline decoration-sky-800 text-sky-800", data: { turbo_frame: "_top" } %> 
      <%= 'person' if likes == 1 %>  
      <%= 'people' if likes > 1 %>
      like<%= 's' if likes == 1 %> this.&nbsp;&nbsp;
    </div>
  <% else %>
    <div class="inline-block">Be the first to like this!&nbsp;&nbsp;</div>
  <% end %>
  <div class="inline-block">
    <%= link_to image_tag("icons/like_outline.png"), likes_path(resource: {type: resource.class, id: resource.id }), data: { turbo_method: :post }, class: "invert brightness-100  hover:brightness-50" %>
  </div>
<% end %>