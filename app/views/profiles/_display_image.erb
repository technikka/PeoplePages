<% if user.profile && user.profile.image.attached? %>
  <% if size == :small %>
    <%= link_to image_tag(user.profile.image_as_small), user.profile.image %>
  <% else %>
    <%= link_to image_tag(user.profile.image_as_thumbnail, class: "h-full w-full  max-h-10 object-cover"), user_path(user) %>
  <% end %>
<% else %>
  <% if size == :small %>
    <%= image_tag('default_image', size: '200x200', class: "h-48 w-48") %>
  <% else %>
    <%= image_tag('default_image', size: '50x50', class: "h-full w-full object-cover") %>
  <% end %>
<% end %>