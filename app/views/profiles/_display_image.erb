<% if user.profile && user.profile.image.attached? %>
  <% if size == :small %>
    <%= link_to image_tag(user.profile.image_as_small), user.profile.image %>
  <% else %>
    <%= link_to image_tag(user.profile.image_as_thumbnail), user_path(user) %>
  <% end %>
<% else %>
  <% if size == :small %>
    <%= image_tag('default_image', size: '200x200') %>
  <% else %>
    <%= image_tag('default_image', size: '50x50') %>
  <% end %>
<% end %>