<div class="row-start-2 col-start-2 justify-self-start h-64 pb-4">
  <%= turbo_frame_tag "profile_info" do %>
    <div class="pb-2 flex flex-col">
      <div>
        <% if !@user.profile.current_city.empty? %>
          <%= image_tag('icons/location.png', class: "invert brightness-50 inline-block")%> Lives in
          <strong><%= @user.profile.current_city %></strong>
        <% end %>
      </div>

      <div>
        <% if !@user.profile.hometown.empty? %>
          <%= image_tag('icons/hometown.png', class: "invert brightness-50 inline-block")%> From
          <strong><%= @user.profile.hometown %></strong>
        <% end %>
      </div>

      <div>
        <% if !@user.profile.workplace.empty? %>
          <%= image_tag('icons/work.png', class: "invert brightness-50 inline-block")%> Employed with
          <strong><%= @user.profile.workplace %></strong>
        <% end %>
      </div>

      <div>
        <% if !@user.profile.websites.empty? %>
          <%= image_tag('icons/web.png', class: "invert brightness-50 inline-block") %> Find me at
          <strong><%= @user.profile.websites %></strong>
        <% end %>
      </div>

      <div>
        <% if !@user.profile.social_links.empty? %>
          <%= image_tag('icons/social.png', class: "invert brightness-50 inline-block") %>  Social at
          <strong><%= @user.profile.social_links %></strong>
        <% end %>
      </div>
    </div>
  
    <% if current_user.id == @user.id %>
    <%= link_to "Edit Profile", edit_user_profile_path(current_user), class: "underline decoration-sky-800 text-sky-800" %>
    <% end %>
  <% end %>
</div>