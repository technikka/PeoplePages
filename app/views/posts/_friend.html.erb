<div class="row-start-3 col-start-1 col-span-full justify-self-center">
    <%= form_with model: Post do |form| %>
        <%= form.text_area :body, size: '60X20',  placeholder: "Say something to #{friend.name.split[0]}", class: "shadow-md text-sm align-middle p-2 relative z-50 max-w-full outline-none focus:border-2 focus:border-sky-800" %>
        <%= form.hidden_field :friend_id, value: friend.id %>
        <%= form.submit 'Post', class: "border-solid border-2 border-stone-200 p-0.5 ml-2 bg-stone-200 hover:bg-amber-300 hover:cursor-pointer rounded-sm" %>
    <% end %>
</div>