<%= render 'new' %>

<div class=" mt-12 grid grid-rows-auto justify-items-center">
	<% if @posts.empty? %>
		<p class="text-lg">Make friends to see their posts here.</p>
		<p class="text-xs">Or start posting to yourself... no judgements here.</p>
	<% end %>
	<% @posts.each do |post| %>
	  <%= render partial: 'post', locals: { post: post } %>
	<% end %>
</div>
